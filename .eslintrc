{
    "extends": "eslint-config-airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "rules": {
        "max-len": [1, 150, 4],
        "default-case": 0,
        "react/no-multi-comp": 0,
        "import/default": 0,
        "import/no-duplicates": 0,
        "import/named": 0,
        "import/namespace": 0,
        "import/no-unresolved": 0,
        "import/no-named-as-default": 2,
        "block-scoped-var": 0,
        "padded-blocks": 0,
        "comma-dangle": 0,
        "indent": [1, 4],
        "react/jsx-indent-props": [1, 4],
        "no-console": 0,
        "no-alert": 0,
        "curly": 0,
        "id-length": [2, {
            "min": 1
        }]
    },
    "plugins": [
        "react", "import"
    ],
    "settings": {
        "import/parser": "babel-eslint",
        "import/resolve": {
            "moduleDirectory": ["node_modules", "src"]
        }
    },
    "globals": {
        "__DEVELOPMENT__": true,
        "__CLIENT__": true,
        "__SERVER__": true,
        "__DISABLE_SSR__": true,
        "__DEVTOOLS__": true,
        "socket": true,
        "webpackIsomorphicTools": true
    }
}
